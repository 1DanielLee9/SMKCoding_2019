    <TextView
        android:id="@+id/front_title_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="♠Home♠"
        android:fontFamily="cursive"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        />
    <Button
        android:id="@+id/front_button_film"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Daftar Film"
        android:fontFamily="cursive"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="75dp"
        android:background="@drawable/backg_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/front_title_main_menu"
        />
    <Button
        android:id="@+id/front_button_list"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Hit Me!"
        android:fontFamily="cursive"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp"
        android:background="@drawable/backg_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/front_button_setting"
        app:layout_constraintTop_toBottomOf="@id/front_button_film"
        />

    <Button
        android:id="@+id/front_button_setting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/backg_btn"
        android:text="☼"
        android:fontFamily="serif-monospace"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="50sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@id/front_button_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/front_button_film"
        />
    <Button
        android:id="@+id/front_button_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/backg_btn"
        android:text="☻"
        android:fontFamily="serif-monospace"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="50sp"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/front_button_film"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:fontFamily="cursive"
        android:textSize="30dp"
        android:textColor="#fff"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>